    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="@string/tramite_descripcion"
        android:textColor="@color/iis_label"
        android:textSize="@dimen/iis_label_size"
        android:textStyle="bold"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/tramite_descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripcioin del tramite "
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/black"
        android:padding="5dp"
        android:lines="5"/>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tramite_item_list_department"
        app:layoutManager="LinearLayoutManager"
        tools:listitem="@layout/fragment_tramite_item_list_department"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>


