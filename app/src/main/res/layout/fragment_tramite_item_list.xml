<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="10dp">

    <!-- A CardView that contains a TextView -->
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="4dp"
        card_view:contentPadding="5dp"
        card_view:cardBackgroundColor="#E8E8E8"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >



            <TextView
                android:id="@+id/name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingBottom="5dp"
                android:text="Nombre del tramite"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:padding="5dp"
                android:background="@color/iis_black"/>


            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/new_label_border"
                android:text="Status"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="#000"
                android:textSize="12dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:paddingTop="100dp"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@string/tramite_departments"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="#000"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tramite_item_list_department"
                app:layoutManager="LinearLayoutManager"
                tools:listitem="@layout/fragment_tramite_item_list_department"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                />




            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:paddingTop="100dp"/>


            <TextView
                android:id="@+id/descripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="descripcion del tramite"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="#000"
                android:textSize="12dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>