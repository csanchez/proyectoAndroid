<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="2">
            <View
                android:id="@+id/solicitud_condition_left_border_title"
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="#2ebadc"/>
            <TextView
                android:id="@+id/notification_status"
                android:gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="Status"
                android:textColor="#2ebadc"/>
            <View
                android:id="@+id/solicitud_condition_rigth_border_title"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginRight="5dp"
                android:background="#2ebadc"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/solicitud_condition_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:background="@drawable/topless_border">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true">
                    <TextView
                        android:id="@+id/sender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Direccion"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="16dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">

                    <TextView
                        android:id="@+id/date"
                        android:layout_gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right|end"
                        android:text="25 nov 2021"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:textColor="#000"
                        android:textStyle="italic"
                        android:textSize="16dp"/>

                </RelativeLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/solicitud_condition_instruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/black"
                android:text="The top inset of the border is set to -3 to make it disappear and then it's covered with a line with text in the middle by using LinearLayout with two Views and one TextView"/>


        </LinearLayout>
    </RelativeLayout>




    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true">

            <TextView
                android:id="@+id/sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Direccion"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="16dp"/>

        <RelativeLayout
            android:id="@+id/rl_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right|end"
                android:text="25 nov 2021"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="#000"
                android:textStyle="italic"
                android:textSize="16dp"/>

        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingBottom="5dp"
            android:text="asdasdasdasdasdasdasfdasfdhasjkdhaskdhashdjhasdljhasjldhjkashdjkahsjdkhajshdjasd"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="#000"
            android:textSize="17dp"/>

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="dasdasdasdasdasdasdasd"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="#000"
            android:textSize="16dp"/>
    </LinearLayout>






</LinearLayout>