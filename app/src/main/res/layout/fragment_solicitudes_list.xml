<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/contentBG2"
    tools:context="com.iis.app.ui.solicitudes.SolicitudesFragment">

<androidx.recyclerview.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/solicitudes_list"
        android:name="com.iis.app.ui.solicitudes.SolicitudesFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="LinearLayoutManager"
        android:visibility="gone"
        tools:listitem="@layout/fragment_solicitud_item_list"/>

    <TextView
        android:id="@+id/zero_solicitudes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zero_solicitudes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/textColor"
        android:textSize="25dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>